<div class="card mb-2">
  <div class="card-body">
    <h5 class="card-title text-muted">
      <%= post.username %>
      <small>- <%= time_ago_in_words post.created_at %> ago</small>
    </h5>
    <div class="card-text lead mb-2"><%= post.body %></div>
    <%= link_to "#", class: "card-link" do %>
      Repost (<%= tag.span post.reposts_count %>)
    <% end %>
    <%= link_to "#", class: "card-link" do %>
      Like (<%= tag.span post.likes_count %>)
    <% end %>
  </div>
</div>